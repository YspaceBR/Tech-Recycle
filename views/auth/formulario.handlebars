<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Agendar Coleta</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    .container {
      max-width: 600px;
      margin: 0 auto;
    }

    .header {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
    }

    .back-btn {
      font-size: 20px;
      text-decoration: none;
      color: #333;
      margin-right: 15px;
    }

    .local-card {
      margin-top: 10px;
      box-shadow: 0 0 6px 2px rgba(0, 0, 0, 0.15);
    }

    .local-card,
    .calendar-section,
    .material-section,
    .peso-section,
    .observacao,
    .toggle-container {
      background-color: white;
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 20px;
    }

    h2 {
      font-size: 18px;
      font-family: "Montserrat", sans-serif;
      font-weight: 500;
      margin: 0 0 15px 0;
    }

    .calendar {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      font-family: "Montserrat", sans-serif;
      gap: 5px;
      margin-top: 10px;
    }

    .week-days {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      text-align: center;
      font-size: 12px;
      color: #777;
      margin-bottom: 5px;
    }

    .week-day {
      padding: 5px 0;
    }

    .day {
      height: 35px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .day:hover {
      background-color: #e0e0e0;
    }

    .day.active {
      background-color: #28a745;
      color: white;
    }

    .day.disabled {
      color: #ccc;
      cursor: not-allowed;
    }

    .dropdown {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      color: #333;
      font-family: "Montserrat", sans-serif;
      border-radius: 5px;
      margin-top: 10px;
      background-color: #f9f9f9;
      font-size: 14px;
    }

    .note {
      font-size: 12px;
      margin-top: 5px;
      font-family: "SourceCodePro", sans-serif;
      font-weight: 500;
      color: gray;
    }

    .toggle {
      position: relative;
      display: inline-block;
      width: 50px;
      height: 24px;
    }

    .toggle input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      transition: .4s;
      border-radius: 24px;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 16px;
      width: 16px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      transition: .4s;
      border-radius: 50%;
    }

    input:checked + .slider {
      background-color: #28a745;
    }

    input:checked + .slider:before {
      transform: translateX(26px);
    }

    textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      resize: vertical;
      min-height: 80px;
      margin-top: 10px;
      font-family: "SourceCodePro", sans-serif;
      box-sizing: border-box;
    }

    .btn-agendar {
      background-color: #28a745;
      color: white;
      padding: 15px 30px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      margin: 20px auto 0 auto;
      display: block;
    }

    .btn-agendar:hover {
      background-color: #218838;
    }

    .month-nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .month-title {
      font-weight: 500;
    }

    .nav-arrow {
      cursor: pointer;
      color: #28a745;
      font-size: 20px;
      user-select: none;
    }

    .agendamento-box {
      background-color: white;
      border-radius: 10px;
      padding: 15px;
      box-shadow: 0 0 6px 2px rgba(0, 0, 0, 0.15);
      margin-bottom: 20px;
    }

    /* Estilo para campo oculto */
    .hidden {
      display: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="#" class="btn-login" id="back-btn" style="font-size: 20px; padding-left: 3vh;" onclick="voltarPagina()">&#x276E;</a>

    <div class="local-card">
      <h2 id="nome-local">Carregando...</h2>
    </div>

    <!-- Importante: mudamos para um <form> com método POST -->
    <form id="coleta-form" action="/agendar-coleta" method="POST">
      <div class="agendamento-box">
        <div class="calendar-section">
          <h2>Quando será sua coleta?</h2>
          <div class="month-nav">
            <span class="nav-arrow" onclick="mudarMes(-1)">&#9664;</span>
            <span class="month-title" id="mes-ano">Agosto 2025</span>
            <span class="nav-arrow" onclick="mudarMes(1)">&#9654;</span>
          </div>
          <div class="week-days">
            <div class="week-day">Dom</div>
            <div class="week-day">Seg</div>
            <div class="week-day">Ter</div>
            <div class="week-day">Qua</div>
            <div class="week-day">Qui</div>
            <div class="week-day">Sex</div>
            <div class="week-day">Sáb</div>
          </div>
          <div class="calendar" id="calendario"></div>
          <!-- Campo oculto para armazenar a data selecionada -->
          <input type="hidden" id="data" name="data" required>
        </div>

        <div class="material-section">
          <h2>Quais materiais serão coletados?</h2>
          <div class="note" id="material-nota">*Essa empresa só realiza coletas Lixos Eletrônicos</div>
          <select class="dropdown" id="material-select" name="material" required>
            <option value="">Selecione uma ou mais opções</option>
            <option value="informatica">Informatica</option>
            <option value="Eletro Eletronicos">Produtos Eletronicos</option>
            <option value="Residuos Eletronicos">Residuos Eletronicos</option>
            <option value="Aparelhos Telefonicos">Aparelhos Telefonicos</option>
          </select>
        </div>

        <div class="peso-section">
          <h2>Qual o peso aproximado da sua separação?</h2>
          <div class="note" id="peso-nota">*Essa empresa só realiza coletas a partir de 10kg</div>
          <select class="dropdown" id="peso-select" name="peso" required>
            <option value="">Selecione uma opção</option>
            <option value="ate5">Até 5kg</option>
            <option value="5a10">De 5kg a 10kg</option>
            <option value="10a20">De 10kg a 20kg</option>
            <option value="mais20">Mais de 20kg</option>
          </select>
        </div>

        <div class="toggle-container">
          <div>
            <h2>Utilizar endereço e contatos do cadastro</h2>
          </div>
          <label class="toggle">
            <input type="checkbox" id="usar-cadastro" name="usarCadastro" checked>
            <span class="slider"></span>
          </label>
        </div>

        <div class="observacao">
          <h2>Tem alguma observação?</h2>
          <textarea id="observacao" name="observacao" placeholder="Comente sobre seus itens, horários que estará disponível, etc."></textarea>
        </div>

        <!-- Campo oculto para enviar o local selecionado -->
        <input type="hidden" id="local" name="local">

        <button type="submit" class="btn-agendar">Agendar Coleta</button>
      </div>
    </form>
  </div>

  <script>
    let pontoSelecionado = localStorage.getItem('pontoTemp') || '';
    document.getElementById('nome-local').innerText = pontoSelecionado;
    document.getElementById('local').value = pontoSelecionado;

    function voltarPagina() {
      window.location.href = '/mapa';
    }

    const hoje = new Date();
    let mesAtual = hoje.getMonth();
    let anoAtual = hoje.getFullYear();
    let diaSelecionado = null;

    function atualizarCalendario() {
      const calendario = document.getElementById('calendario');
      calendario.innerHTML = '';

      const mesAnoElement = document.getElementById('mes-ano');
      const meses = ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'];
      mesAnoElement.innerText = `${meses[mesAtual]} ${anoAtual}`;

      const primeiroDia = new Date(anoAtual, mesAtual, 1);
      const ultimoDia = new Date(anoAtual, mesAtual + 1, 0);

      for (let i = 0; i < primeiroDia.getDay(); i++) {
        const diaVazio = document.createElement('div');
        diaVazio.className = 'day disabled';
        calendario.appendChild(diaVazio);
      }

      for (let i = 1; i <= ultimoDia.getDate(); i++) {
        const dia = document.createElement('div');
        dia.className = 'day';
        dia.innerText = i;

        const dataAtual = new Date(anoAtual, mesAtual, i);
        if (dataAtual < hoje) {
          dia.className = 'day disabled';
        } else {
          dia.onclick = function () {
            const diasAtivos = document.querySelectorAll('.day.active');
            diasAtivos.forEach(d => d.classList.remove('active'));

            dia.classList.add('active');
            diaSelecionado = new Date(anoAtual, mesAtual, i);
            
            // Formatando a data para o formato YYYY-MM-DD para envio ao servidor
            const mes = (mesAtual + 1).toString().padStart(2, '0');
            const diaStr = i.toString().padStart(2, '0');
            document.getElementById('data').value = `${anoAtual}-${mes}-${diaStr}`;
          };
        }

        calendario.appendChild(dia);
      }
    }

    function mudarMes(delta) {
      mesAtual += delta;
      if (mesAtual > 11) {
        mesAtual = 0;
        anoAtual++;
      } else if (mesAtual < 0) {
        mesAtual = 11;
        anoAtual--;
      }
      atualizarCalendario();
    }

    window.onload = function () {
      const pontoTemp = localStorage.getItem('pontoTemp');
      if (!pontoTemp) {
        window.location.href = '/mapa';
        return;
      }

      document.getElementById('nome-local').innerText = pontoTemp;
      document.getElementById('local').value = pontoTemp;

      if (pontoTemp === 'Tech-Recycle') {
        document.getElementById('material-nota').innerText = '*Essa empresa só realiza coletas de Lixos Eletrônicos';
        document.getElementById('peso-nota').innerText = '*Essa empresa só realiza coletas a partir de 10kg';
      }

      atualizarCalendario();
      
      // Adicionamos validação no formulário antes de enviar
      document.getElementById('coleta-form').addEventListener('submit', function(event) {
        if (!document.getElementById('data').value) {
          event.preventDefault();
          alert('Por favor, selecione uma data para a coleta');
          return false;
        }
        
        if (!document.getElementById('material-select').value) {
          event.preventDefault();
          alert('Por favor, selecione o tipo de material');
          return false;
        }
        
        if (!document.getElementById('peso-select').value) {
          event.preventDefault();
          alert('Por favor, selecione o peso aproximado');
          return false;
        }
        
        const dataFormatada = diaSelecionado.toLocaleDateString('pt-BR', { day: '2-digit', month: '2-digit', year: 'numeric' });
        const horario = '08:00';

        const agendamento = {
          data: dataFormatada,
          horario,
          material: document.getElementById('material-select').value,
          peso: document.getElementById('peso-select').value,
          usarCadastro: document.getElementById('usar-cadastro').checked,
          observacao: document.getElementById('observacao').value,
          local: pontoSelecionado
        };

        localStorage.setItem('agendamento', JSON.stringify(agendamento));
        localStorage.setItem('agendamentoStatus', 'ativo');
      });
    };
  </script>
</body>
</html>